        canu = true
        canu_genomesize = "1g"

        //FLYE
        flye = true

        //METAFLYE
        metaflye = true

        //RA
        ra = true

        //RAVEN
        raven = true

        //WTDBG2
        wtdbg2 = true

        /*
        Assembly Quality Control
        */
        minLength = 1000
        mapped_reads_threshold = 0.75

        /*
        Quality Parameters
        */
        n_target = 0.5
        l_target = 0.9
        plot_scale = 'log'
}
