params {

        /*
        Run Mode
        ---------------------------
        */
        wf = "default"

        /*
        Input Files
        ---------------------------
        */
        fastq = 'data/fastq/*_{1,2}.*'
        ont = false
        reference = 'data/reference/*.fasta'
        md = 'data/*.md'

        /*
        Sort-Read Assemblers
        ---------------------------
        */
        //abyss
        abyss = false
        abyssKmerSize = 96
        abyssBloomSize = '2G'

